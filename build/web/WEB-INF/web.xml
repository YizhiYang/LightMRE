<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomePageServ</servlet-name>
        <servlet-class>HomePageServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchResult</servlet-name>
        <servlet-class>SearchResult</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOfEmployees</servlet-name>
        <servlet-class>ListOfEmployees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMovie</servlet-name>
        <servlet-class>DeleteMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueryAllCustomers</servlet-name>
        <servlet-class>QueryAllCustomers</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>AddEmployee</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServ</servlet-name>
        <url-pattern>/HomePageServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchResult</servlet-name>
        <url-pattern>/SearchResult</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOfEmployees</servlet-name>
        <url-pattern>/ListOfEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMovie</servlet-name>
        <url-pattern>/DeleteMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryAllCustomers</servlet-name>
        <url-pattern>/QueryAllCustomers</url-pattern>
    </servlet-mapping>
    
        <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
